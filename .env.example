# Pirate Radio AI - Environment Variables
# Copy this file to .env and fill in your values

# ===================
# REQUIRED
# ===================

# Groq API Key (free at console.groq.com)
GROQ_API_KEY=gsk_your_api_key_here

# FFmpeg (folder with ffmpeg.exe; optional if ffmpeg in PATH)
# FFMPEG_BIN_DIR=C:\path\to\ffmpeg\bin

# ===================
# OPTIONAL
# ===================

# Язык (по умолчанию русский)
RADIO_LANGUAGE=ru-RU
VOICE_NEWS=ru-RU-DmitryNeural
VOICE_WEATHER=ru-RU-SvetlanaNeural
VOICE_JINGLE=ru-RU-DmitryNeural

# Russian: ru-RU-DmitryNeural (M), ru-RU-SvetlanaNeural (F)
# English US: en-US-GuyNeural (M), en-US-JennyNeural (F)
# Serbian: sr-RS-NicholasNeural (M), sr-RS-SophieNeural (F)
# Croatian: hr-HR-SreckoNeural (M), hr-HR-GabrijelaNeural (F)

# Timing (in seconds)
NEWS_INTERVAL=900       # 15 minutes
WEATHER_INTERVAL=1800   # 30 minutes
MUSIC_TRACK_LENGTH=180  # 3 minutes

# Audio
MUSIC_VOLUME=0.3        # Background music volume (0.0-1.0)
STREAM_BITRATE=128      # kbps

# News Style
NEWS_STYLE=professional  # professional, casual, dramatic

# Weather
WEATHER_CITY=Belgrade,RS

# Icecast (optional)
ICECAST_HOST=localhost
ICECAST_PORT=8000
ICECAST_PASSWORD=hackme
ICECAST_MOUNT=/stream

# Logging
LOG_LEVEL=INFO
